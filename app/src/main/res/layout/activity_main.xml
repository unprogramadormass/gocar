<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/rootLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondocarplay"
    android:padding="12dp">

    <View android:layout_width="match_parent" android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/sidebar"
        android:layout_width="85dp"
        android:layout_height="match_parent"
        android:background="@drawable/fondo_cristal"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        app:layout_constraintStart_toStartOf="parent">

        <TextClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:format12Hour="h:mm a"
            android:format24Hour="h:mm a"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">
            <ImageView android:id="@+id/ivNetwork" android:layout_width="18dp" android:layout_height="18dp" android:src="@drawable/ic_menu_wifi" app:tint="#FFFFFF" />
            <Space android:layout_width="8dp" android:layout_height="0dp"/>
            <ImageView android:id="@+id/ivBattery" android:layout_width="18dp" android:layout_height="18dp" android:src="@drawable/ic_battery_full" app:tint="#FFFFFF" />
            <TextView android:id="@+id/tvBattery" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="50%" android:textSize="10sp" android:textColor="#FFFFFF" android:layout_marginLeft="2dp"/>
        </LinearLayout>

        <Space android:layout_width="match_parent" android:layout_height="30dp" />

        <ImageView android:id="@+id/btnMapas" android:layout_width="50dp" android:layout_height="50dp" android:layout_marginBottom="12dp" android:elevation="5dp" android:scaleType="centerInside" android:src="@android:drawable/ic_dialog_map"/>
        <ImageView android:id="@+id/btnMusica" android:layout_width="50dp" android:layout_height="50dp" android:layout_marginBottom="12dp" android:elevation="5dp" android:scaleType="centerInside" android:src="@drawable/ic_menu_my_music"/>
        <ImageView android:id="@+id/btnTelefono" android:layout_width="50dp" android:layout_height="50dp" android:layout_marginBottom="12dp" android:elevation="5dp" android:scaleType="centerInside" android:src="@android:drawable/sym_action_call"/>

        <Space android:layout_width="1dp" android:layout_height="0dp" android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/gridMenuContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true">
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="4dp">
                <View android:layout_width="14dp" android:layout_height="14dp" android:background="#CCFFFFFF" android:layout_marginEnd="4dp"/>
                <View android:layout_width="14dp" android:layout_height="14dp" android:background="#CCFFFFFF" android:layout_marginEnd="4dp"/>
                <View android:layout_width="14dp" android:layout_height="14dp" android:background="#CCFFFFFF"/>
            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
                <View android:layout_width="14dp" android:layout_height="14dp" android:background="#CCFFFFFF" android:layout_marginEnd="4dp"/>
                <View android:layout_width="14dp" android:layout_height="14dp" android:background="#CCFFFFFF" android:layout_marginEnd="4dp"/>
                <View android:layout_width="14dp" android:layout_height="14dp" android:background="#CCFFFFFF"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <com.mapbox.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/fondo_cristal"
        app:layout_constraintEnd_toStartOf="@+id/rightPanel"
        app:layout_constraintStart_toEndOf="@id/sidebar" />

    <LinearLayout android:id="@+id/contactsContainer" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginStart="12dp" android:layout_marginEnd="12dp" android:background="@drawable/fondo_cristal" android:orientation="vertical" android:padding="16dp" android:visibility="gone" app:layout_constraintEnd_toStartOf="@+id/rightPanel" app:layout_constraintStart_toEndOf="@id/sidebar">
        <EditText android:id="@+id/etSearch" android:layout_width="match_parent" android:layout_height="50dp" android:background="#30000000" android:hint="Buscar contactos..." android:textColorHint="#BBBBBB" android:textColor="#FFFFFF" android:paddingHorizontal="16dp" android:drawableStart="@android:drawable/ic_menu_search" android:drawablePadding="10dp" android:layout_marginBottom="12dp" android:inputType="textPersonName"/>
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/rvContacts" android:layout_width="match_parent" android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout android:id="@+id/musicContainer" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginStart="12dp" android:layout_marginEnd="12dp" android:background="@drawable/fondo_cristal" android:orientation="vertical" android:padding="16dp" android:visibility="gone" app:layout_constraintEnd_toStartOf="@+id/rightPanel" app:layout_constraintStart_toEndOf="@id/sidebar">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Mi Música (MP3)" android:textColor="#AAAAAA" android:textSize="14sp" android:textStyle="bold" android:layout_marginBottom="12dp"/>
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/rvMusic" android:layout_width="match_parent" android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/appGridContainer"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/sidebar"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center" android:layout_marginBottom="25dp">
            <LinearLayout android:id="@+id/btnAppCalendar" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:orientation="vertical">
                <ImageView android:id="@+id/ivAppCalendar" android:layout_width="60dp" android:layout_height="60dp" android:src="@android:drawable/ic_menu_my_calendar"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Calendario" android:textColor="#FFFFFF" android:layout_marginTop="8dp"/>
            </LinearLayout>
            <LinearLayout android:id="@+id/btnAppMessages" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:orientation="vertical">
                <ImageView android:id="@+id/ivAppMessages" android:layout_width="60dp" android:layout_height="60dp" android:src="@android:drawable/sym_action_chat"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Mensajes" android:textColor="#FFFFFF" android:layout_marginTop="8dp"/>
            </LinearLayout>
            <LinearLayout android:id="@+id/btnAppWeather" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:orientation="vertical">
                <ImageView android:id="@+id/ivAppWeather" android:layout_width="60dp" android:layout_height="60dp" android:src="@android:drawable/ic_menu_day"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Clima" android:textColor="#FFFFFF" android:layout_marginTop="8dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center" android:layout_marginBottom="25dp">
            <LinearLayout android:id="@+id/btnAppMusicGrid" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:orientation="vertical">
                <ImageView android:id="@+id/ivAppMusicGrid" android:layout_width="60dp" android:layout_height="60dp" android:src="@drawable/ic_menu_my_music"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Música" android:textColor="#FFFFFF" android:layout_marginTop="8dp"/>
            </LinearLayout>
            <LinearLayout android:id="@+id/btnAppSettings" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:orientation="vertical">
                <ImageView android:id="@+id/ivAppSettings" android:layout_width="60dp" android:layout_height="60dp" android:src="@android:drawable/ic_menu_preferences"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Ajustes" android:textColor="#FFFFFF" android:layout_marginTop="8dp"/>
            </LinearLayout>
            <LinearLayout android:id="@+id/btnAppCustom" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:orientation="vertical">
                <ImageView android:id="@+id/ivAppCustom" android:layout_width="60dp" android:layout_height="60dp" android:src="@android:drawable/ic_input_add" app:tint="#FFFFFF" android:background="@drawable/fondo_cristal"/>
                <TextView android:id="@+id/tvAppCustom" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Añadir" android:textColor="#FFFFFF" android:layout_marginTop="8dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center">
            <LinearLayout android:id="@+id/btnAppExit" android:layout_width="100dp" android:layout_height="wrap_content" android:gravity="center" android:orientation="vertical">
                <ImageView android:layout_width="60dp" android:layout_height="60dp" android:src="@android:drawable/ic_delete" app:tint="#FFFFFF" android:background="@drawable/fondo_cristal"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Salir del Panel" android:textColor="#FFFFFF" android:layout_marginTop="8dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rightPanel"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1.6" android:layout_marginBottom="12dp" android:background="@drawable/fondo_cristal" android:gravity="center" android:orientation="vertical" android:padding="16dp">
            <androidx.cardview.widget.CardView android:layout_width="90dp" android:layout_height="90dp" app:cardCornerRadius="15dp" app:cardElevation="0dp" app:cardBackgroundColor="#00000000"><ImageView android:id="@+id/ivNowPlayingCover" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@android:drawable/ic_menu_gallery" android:scaleType="centerCrop"/></androidx.cardview.widget.CardView>
            <TextView android:id="@+id/tvNowPlayingTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="Sin reproducción" android:textColor="#FFFFFF" android:textSize="18sp" android:textStyle="bold" android:singleLine="true" android:ellipsize="marquee" android:marqueeRepeatLimit="marquee_forever"/>
            <TextView android:id="@+id/tvNowPlayingArtist" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Selecciona música" android:textColor="#DDFFFFFF" android:textSize="14sp" android:singleLine="true"/>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center" android:layout_marginTop="12dp">
                <ImageView android:id="@+id/btnPrev" android:layout_width="35dp" android:layout_height="35dp" android:src="@android:drawable/ic_media_previous" app:tint="#FFFFFF" android:clickable="true"/>
                <ImageView android:id="@+id/btnPlayPause" android:layout_width="45dp" android:layout_height="45dp" android:layout_marginHorizontal="20dp" android:src="@android:drawable/ic_media_play" app:tint="#FFFFFF" android:clickable="true"/>
                <ImageView android:id="@+id/btnNext" android:layout_width="35dp" android:layout_height="35dp" android:src="@android:drawable/ic_media_next" app:tint="#FFFFFF" android:clickable="true"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="0.8" android:background="@drawable/fondo_cristal" android:gravity="center" android:orientation="vertical" android:padding="8dp">
            <TextClock android:layout_width="wrap_content" android:layout_height="wrap_content" android:format12Hour="EEEE, d 'de' MMMM yyyy" android:format24Hour="EEEE, d 'de' MMMM yyyy" android:textColor="#FFFFFF" android:textSize="18sp" android:textStyle="bold" android:gravity="center"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Notificaciones" android:textColor="#AAAAAA" android:textSize="10sp" android:layout_marginTop="8dp" android:layout_marginBottom="4dp"/>
            <LinearLayout android:id="@+id/notificationIconsContainer" android:layout_width="match_parent" android:layout_height="30dp" android:gravity="center" android:orientation="horizontal"></LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>